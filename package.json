{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"yarn backend\" \"yarn frontend\"",
    "backend": "yarn workspace @group-interest/backend start",
    "frontend": "yarn workspace @group-interest/client start",
    "build": "cd packages/client && yarn build",
    "test": "cd packages/client && yarn test"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
